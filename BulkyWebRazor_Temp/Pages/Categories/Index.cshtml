@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-dark">
                <i class="bi bi-pencil-square"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-hover table-striped shadow-sm">
    <thead>
        <tr class="table-dark">
            <th style="width: 70%;">
                Category Name
            </th>
            <th style="width: 30%;">
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model.Categories.OrderBy(c=>c.DisplayOrder))
        {
            <tr style="height: 50px;">
                <!-- Adjust height here -->
                <td>@category.Name</td>
                 <td>@category.DisplayOrder</td>
                <td>
                    <div class="w-100 d-flex justify-content-start mx-2" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@category.Id" class="btn btn-primary btn-sm shadow-sm w-100">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm shadow-sm mx-3">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>


            </tr>
        }
    </tbody>
</table>

